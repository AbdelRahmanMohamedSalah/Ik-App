<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Change Type!!"
        android:textColor="#000"
        android:textSize="22sp"
        android:fontFamily="@font/quantico"/>

    <TextView
android:id="@+id/nameChangeTypeMyTeamAdminActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="18sp"
        android:fontFamily="monospace"/>

    <RadioGroup
        android:id="@+id/RadioGroupChangeTypeMyTeamAdminActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RadioAdmin"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/RadioMember"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Member"
            android:textSize="18sp" />

    </RadioGroup>

    <Button
        android:id="@+id/BtnSaveChangeTypeMyTeamAdminActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_style"
        android:text="save"
        android:textColor="#fff"
        android:layout_marginBottom="14dp"/>

</LinearLayout>