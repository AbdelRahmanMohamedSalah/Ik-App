<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Member.Activity.RequestDetailsActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_backRequestDetailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5.0"
            android:gravity="center"
            android:fontFamily="@font/quantico"
            android:text="Request Details"
            android:textColor="#ffe6e6e6"
            android:textSize="24.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textTitleRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/bold"
        android:text="شقه بالحي المتميز" />

    <TextView
        android:id="@+id/textDetailsRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="شقه" />

    <TextView
        android:id="@+id/textPriceRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="السعر" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff000000" />

    <TextView
        android:id="@+id/textNameRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="اسم العميل " />

    <TextView
        android:id="@+id/textPhoneRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="رقم التليفون" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff000000" />

    <TextView
        android:id="@+id/textCommentRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="تعليق" />

    <TextView
        android:id="@+id/textTimeRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="الوقت" />
</LinearLayout>