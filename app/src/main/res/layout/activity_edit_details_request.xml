<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Member.Activity.EditDetailsRequestActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_backEditRequestDetailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:padding="5.0dip"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:fontFamily="@font/quantico"
            android:text="Request Details"
            android:textColor="#ffe6e6e6"
            android:textSize="24.0sp" />

        <ImageView
            android:id="@+id/ic_acceptEditRequestDetailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:padding="5.0dip"
            android:src="@drawable/ic_accept_black_24dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/EtEditTitleRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/bold"
        android:text="شقه بالحي المتميز" />

    <EditText
        android:id="@+id/EtEditDetailsRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="شقه" />

    <EditText
        android:id="@+id/EtEditPriceRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="السعر" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff000000" />

    <EditText
        android:id="@+id/EtEditNameRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="اسم العميل " />

    <EditText
        android:id="@+id/EtEditPhoneRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="رقم التليفون" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff000000" />

    <EditText
        android:id="@+id/EtEditCommentRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="تعليق" />

    <TextView
        android:id="@+id/textEditTimeRequestDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="4.0dip"
        android:fontFamily="@font/regular"
        android:text="الوقت" />
</LinearLayout>