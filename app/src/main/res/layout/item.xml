<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4.0dip"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginBottom="6.0dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_weight="1.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextCodeItemList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L190"
                    android:fontFamily="@font/regular"/>

                <TextView
                    android:id="@+id/TextSpaceListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="120م"
                    android:fontFamily="@font/regular" />

                <TextView
                    android:id="@+id/TextPriceItemList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:inputType="numberSigned|numberDecimal"
                    android:text="66000000 EGP"
                    android:fontFamily="@font/regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextTitleItemList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/bold"
                    android:text="شقه بالحي الرابع "
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textLocationListItemActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right|center"
                    android:drawableEnd="@drawable/ic_location_on_black_24dp"
                    android:text="الفردوس"
                    android:gravity="center"
                    android:fontFamily="@font/regular"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
