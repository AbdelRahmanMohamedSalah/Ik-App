<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Member.Activity.AddRequestActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_backAddRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:fontFamily="@font/quantico"
                android:text="Add Request"
                android:textColor="#ffe6e6e6"
                android:textSize="24.0sp" />

            <ImageView
                android:id="@+id/ic_saveAddRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:src="@drawable/ic_done_black_24dp" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10.0dip"
            android:visibility="gone" />

        <EditText
            android:id="@+id/EtTitleAddRequestActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="8.0dip"
            android:fontFamily="@font/bold"
            android:hint="عنوان المطلوب" />

        <EditText
            android:id="@+id/EtDetailsAddRequestActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="8.0dip"
            android:fontFamily="@font/regular"
            android:hint="التفاصيل" />

        <EditText
            android:id="@+id/EtPriceAddRequestActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="8.0dip"
            android:fontFamily="@font/regular"
            android:hint="السعر من الي " />

        <EditText
            android:id="@+id/EtNameAddRequestActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="8.0dip"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:fontFamily="@font/regular"
            android:gravity="right"
            android:hint="اسم المشتري" />

        <EditText
            android:id="@+id/EtPhoneAddRequestActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="8.0dip"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:fontFamily="@font/regular"
            android:gravity="right"
            android:inputType="number"
            android:hint="رقم تليفون المشتري" />

        <EditText
            android:id="@+id/EtCommentAddRequestActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="8.0dip"
            android:fontFamily="@font/regular"
            android:gravity="right"
            android:hint="تعليق" />

        <ProgressBar
            android:id="@+id/progressBarAddRequestActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5.0dip" />
    </LinearLayout>
</ScrollView>