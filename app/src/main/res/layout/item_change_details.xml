<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="4.0dip"
        android:layout_marginBottom="6.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icEditItemDetailsAdminActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="4.0dip"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/icDeleteItemDetailsAdminActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="4.0dip"
                android:src="@drawable/ic_delete_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextCodeItemDetailsAdminActivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:fontFamily="@font/regular"
                android:text="L190" />

            <TextView
                android:id="@+id/TextSpaceItemDetailsAdminActivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="@font/regular"
                android:gravity="left"
                android:text="120م" />

            <TextView
                android:id="@+id/TextPriceItemDetailsAdminActivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="@font/regular"
                android:gravity="left"
                android:inputType="numberSigned|numberDecimal"
                android:text="66000000 EGP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextTitleItemDetailsAdminActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="شقه بالحي الرابع " />

            <TextView
                android:id="@+id/TextLocationchangeItemDetailsAdminActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right|center"
                android:layout_weight="1.0"
                android:drawableEnd="@drawable/ic_location_on_black_24dp"
                android:fontFamily="@font/regular"
                android:text="الفردوس" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff000000" />
</LinearLayout>