<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Member.Activity.AddPreviousActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_backAddPreviousActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:fontFamily="@font/quantico"
            android:gravity="center"
            android:text="Add Previous"
            android:textColor="#ffe6e6e6"
            android:textSize="24.0sp"
            app:fontFamily="@font/quantico" />

        <ImageView
            android:id="@+id/ic_saveAddPreviousActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/ic_done_black_24dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/EtCodeAddPreviousActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:fontFamily="@font/bold"
        android:gravity="right"
        android:hint="كود العقار"
        android:maxLength="4" />

    <EditText
        android:id="@+id/EtClientNameAddPreviousActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:fontFamily="@font/regular"
        android:gravity="right"
        android:hint="اسم المشتري" />

    <EditText
        android:id="@+id/EtClientPhoneAddPreviousActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:fontFamily="@font/regular"
        android:gravity="right"
        android:hint=" تليفون المشتري"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <Spinner
        android:id="@+id/SpinnerMemberAddPreviousActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:gravity="right"
        android:padding="10.0dip" />

    <EditText
        android:id="@+id/EtClockAddPreviousActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:fontFamily="@font/regular"
        android:gravity="right"
        android:hint=" 7:00 AM(الساعه)"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:gravity="right"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ETMonthAddPerivousActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:fontFamily="@font/regular"
            android:hint="الشهر"
            android:inputType="number"
            android:maxLength="2" />

        <EditText
            android:id="@+id/ETDayAddPerivousActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:fontFamily="@font/regular"
            android:hint="اليوم"
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <EditText
        android:id="@+id/EtCommentAddPreviousActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="8.0sp"
        android:fontFamily="@font/regular"
        android:gravity="right"
        android:hint="التفاصيل (اختياري)" />

    <ProgressBar
        android:id="@+id/progressBarAddPreviousActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5.0dip" />
</LinearLayout>